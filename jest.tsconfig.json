{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "sourceMap": false,
    "experimentalDecorators": true,
    "noImplicitUseStrict": true,
    "removeComments": true,
    "moduleResolution": "node",
    "lib": [
      "es2017"
    ],
    "typeRoots": [
      "node_modules/@types",
      "@types"
    ],
    "paths": {
      "*": ["./src/**/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
