{
  "compilerOptions": {
    "baseUrl": "./src",
    "rootDir": "src",
    "module": "commonjs",
    "target": "esnext",
    "sourceMap": true,
    "experimentalDecorators": true,
    "noImplicitUseStrict": true,
    "removeComments": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": [
      "es2017"
    ],
    "typeRoots": [
      "node_modules/@types",
      "@types"
    ]
  },
  "include": [
    "src/**/*.ts"
  ]
}
